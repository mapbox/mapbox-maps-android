<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".examples.linesandpolygons.DrawGeoJsonLineActivity">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="37.785301"
        mapbox:mapbox_cameraTargetLng="-122.395922"
        mapbox:mapbox_cameraZoom="16" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ic_paint"
        mapbox:backgroundTint="@color/primary" />

</FrameLayout>