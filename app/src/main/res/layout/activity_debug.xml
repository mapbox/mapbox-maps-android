<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        mapbox:mapbox_scaleBarBorderWidth="1dp"
        mapbox:mapbox_scaleBarHeight="3dp"
        mapbox:mapbox_scaleBarMarginLeft="5dp"
        mapbox:mapbox_scaleBarMarginTop="5dp"
        mapbox:mapbox_scaleBarPrimaryColor="@color/white"
        mapbox:mapbox_scaleBarSecondaryColor="@color/design_default_color_on_secondary"
        mapbox:mapbox_scaleBarTextBarMargin="5dp"
        mapbox:mapbox_scaleBarTextBorderWidth="1dp"
        mapbox:mapbox_scaleBarTextColor="@color/accent"
        mapbox:mapbox_scaleBarTextSize="10dp"
        tools:context=".examples.SimpleMapActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkboxTileBorders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debug_tile_borders" />

        <CheckBox
            android:id="@+id/checkboxParseStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debug_parse_status" />

        <CheckBox
            android:id="@+id/checkboxTimestamps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debug_timestamps" />

        <CheckBox
            android:id="@+id/checkboxCollision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debug_collision" />

        <CheckBox
            android:id="@+id/checkboxOverdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debug_overdraw" />

        <CheckBox
            android:id="@+id/checkboxStencilClip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debug_stencil_clip" />

        <CheckBox
            android:id="@+id/checkboxDepthBuffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debug_depth_buffer" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debug_button" />

    </LinearLayout>

</LinearLayout>
